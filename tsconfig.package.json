{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "noEmit": false,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "types": ["node", "jest"]
    },
    "exclude": ["node_modules", "dist"]
}
